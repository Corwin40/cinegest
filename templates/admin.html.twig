<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CineGest - Admin{% endblock %}</title>
        {% block stylesheets %}
            {% if app.request.get('_route') == 'cinegest_webpack_admin_dashboard' %}
                {{ encore_entry_link_tags('admin') }}
            {% elseif app.request.get('_route') == 'cinegest_webapp_logs_login' %}
                {{ encore_entry_link_tags('login') }}
            {% endif %}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {% if app.request.get('_route') == 'cinegest_webpack_admin_dashboard' %}
                {{ encore_entry_script_tags('admin') }}
            {% elseif app.request.get('_route') == 'cinegest_webapp_logs_login' %}
                {{ encore_entry_script_tags('login') }}
            {% endif %}
        {% endblock %}
    </body>
</html>
